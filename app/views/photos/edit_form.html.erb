<div class="container">
<div class="col-md-6">

  <h1>Edit Photo <%= @my_photo.id %></h1>

  <form action="/update_photo/<%= @my_photo.id %>">
    <div>
      <label for="source_input">
        Image URL
      </label>

      <input id="source_input" type="text" name="the_source" value="<%= @my_photo.source %>">
    </div>

    <div>
      <label for="caption_input">
        Caption
      </label>

      <input id="caption_input" type="text" name="the_caption" value="<%= @my_photo.caption %>">
    </div>

    <button>
      Update Photo
    </button>
  </form>


</div>
</div>
